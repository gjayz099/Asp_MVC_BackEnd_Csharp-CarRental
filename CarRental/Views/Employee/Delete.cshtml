@model CarRental.Models.Employee

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="All-Header">
    <div class="All-Content">
        <h3 class="text-white mt-5">Employee Delete</h3>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center my-5">
        <div class="col-lg-10">
            <h1 class="text-center fst-italic">Delete Employee</h1>
            <hr />
            <dl class="row my-3">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmployeeFName)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => model.EmployeeFName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmployeeLName)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => model.EmployeeLName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmployeePhoneNum)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => model.EmployeePhoneNum)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmployeeSalary)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => model.EmployeeSalary)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.JoinDate)
                </dt>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => model.JoinDate)
                </dd>
            </dl>
            <form asp-action="Delete" class="d-flex justify-content-between px-4">
                <input type="hidden" asp-for="EmployeeID" />
                <input type="submit" value="Delete" class="btn btn-danger w-25" />
                <a class="btn btn-secondary w-25" asp-action="Index">Back</a>
            </form>

        </div>
    </div>
</div>



