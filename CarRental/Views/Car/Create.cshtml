@model CarRental.Models.Car

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="All-Header">
    <div class="All-Content">
        <h3 class="text-white mt-5">Car Add</h3>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center my-5">
        <div class="col-lg-10">
            <h1 class="text-center fst-italic">Add Car</h1>
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row my-2">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="CarModel" class="control-label"></label>
                            <input asp-for="CarModel" class="form-control" />
                            <span asp-validation-for="CarModel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="CarBrand" class="control-label"></label>
                            <input asp-for="CarBrand" class="form-control" />
                            <span asp-validation-for="CarBrand" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="CarPlateNum" class="control-label"></label>
                            <input asp-for="CarPlateNum" class="form-control" />
                            <span asp-validation-for="CarPlateNum" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="CarPriceDay" class="control-label"></label>
                            <input asp-for="CarPriceDay" class="form-control" />
                            <span asp-validation-for="CarPriceDay" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="CarPriceWeek" class="control-label"></label>
                            <input asp-for="CarPriceWeek" class="form-control" />
                            <span asp-validation-for="CarPriceWeek" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="CarPriceMonth" class="control-label"></label>
                            <input asp-for="CarPriceMonth" class="form-control" />
                            <span asp-validation-for="CarPriceMonth" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="CarAvilable" class="control-label"></label>
                            <select asp-for="CarAvilable" class="form-control">
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                            <span asp-validation-for="CarAvilable" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Image</label>
                            <input type="file" name="FilePic" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-between my-3">
                    <input type="submit" value="Create" class="btn btn-primary w-25" />
                    <a class="btn btn-secondary w-25" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
