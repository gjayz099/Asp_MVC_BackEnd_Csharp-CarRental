@model IEnumerable<CarRental.Models.Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="All-Header">
    <div class="All-Content">
        <h3 class="text-white mt-5">Car List</h3>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center my-5">
        <div class="col-lg-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CarModel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarBrand)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarPlateNum)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarPriceDay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarPriceWeek)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarPriceMonth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarAvilable)
                        </th>
                        <th>
                            <a class="btn btn-primary w-50" asp-action="Create">Create</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarModel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarBrand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarPlateNum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarPriceDay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarPriceWeek)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarPriceMonth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarAvilable)
                            </td>
                            <td>
                                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.CarID">Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CarID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


