@model IEnumerable<CarRental.Models.Car>

@{
    ViewData["Title"] = "Pricing";
}
<div class="All-Header">
    <div class="All-Content">
        <h3 class="text-white mt-5">Pricing</h3>
    </div>
</div>
<section>
    <div class="container">
        <h1 class="content text-center mt-5 fst-italic">Pricing</h1>
        <div class="row">
        @foreach (var item in Model)
        {
        var ImgPath = "../img/" + (item.CarModel) + ".jpg";
        <div class="col-lg-4 col-md-8 col-sm-12 m-auto py-4">
            <div class="rental-item pb-3">
                <div class="img-car">
                    <img src="@ImgPath" />
                </div>    
                <div class="car_text">
                    <div class="car_name_brand d-flex justify-content-between px-4">
                        <h6>@item.CarModel</h6>
                        <h6>@item.CarBrand</h6>
                    </div>
                    <p class="px-4 text-center fst-italic my-2">Insured, leather interior, air conditioning, rain sensor, panoramic roof conditioning, rain sensor.</p>
                    <div class="icons-pricing">
                        <div class="icon-pricing">
                            <i class='bx bx-chair'></i>
                            <p>5 Seats</p>
                        </div>
                        <div class="icon-pricing">
                            <i class='bx bx-gas-pump' ></i>
                            <p>Diesel</p>
                        </div>
                        <div class="icon-pricing">
                            <i class='bx bxs-car-mechanic'></i>
                            <p>Mechanic</p>
                        </div>
                    </div>
                    <div class="px-5 py-4 d-flex gap-3">
                        <div class="price-car d-inline-block m-auto">
                            <h6 class="text-center fst-italic">&#8369; @item.CarPriceDay</h6>
                            <h6 class="text-center fst-italic">Per Day</h6>
                        </div>
                                <div class="price-car d-inline-block m-auto">
                            <h6 class="text-center fst-italic">&#8369; @item.CarPriceWeek</h6>
                            <h6 class="text-center fst-italic">Per Weeks</h6>
                        </div> 
                         <div class="price-car d-inline-block m-auto">
                            <h6 class="text-center fst-italic">&#8369; @item.CarPriceMonth</h6>
                            <h6 class="text-center fst-italic">Per Month</h6>
                        </div> 
                    </div>
                    <div class="btn-pricing">
                    @if(item.CarAvilable == "Yes")
                    {
                        <a asp-action="Create" class="text-Yes">Avilable Yes</a>
                    }
                    else
                    {
                        <a asp-action="Create"  class="text-No">Avilable No</a>
                    }
                    </div>
                </div>
            </div>
        </div>
        }
        </div>
    </div>
</section>
