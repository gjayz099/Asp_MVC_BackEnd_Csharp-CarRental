@model CarRental.Models.Booking


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="All-Header">
    <div class="All-Content">
        <h3 class="text-white mt-5">Booking</h3>
    </div>
</div>
<div class="container">
    <div class="row my-5 justify-content-center">
        <div class="col-lg-10">
            <h1 class="text-center fst-italic">Booking</h1>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row my-2">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="BookingCarModel" class="control-label"></label>
                            <input asp-for="BookingCarModel" class="form-control" />
                            <span asp-validation-for="BookingCarModel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="BookingFName" class="control-label"></label>
                            <input asp-for="BookingFName" class="form-control" />
                            <span asp-validation-for="BookingFName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                         <div class="form-group">
                            <label asp-for="BookingLName" class="control-label"></label>
                            <input asp-for="BookingLName" class="form-control" />
                            <span asp-validation-for="BookingLName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col-lg-6">
                         <div class="form-group">
                            <label asp-for="BookingPhoneNum" class="control-label"></label>
                            <input asp-for="BookingPhoneNum" class="form-control" />
                            <span asp-validation-for="BookingPhoneNum" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="PickUpDate" class="control-label"></label>
                            <input asp-for="PickUpDate" class="form-control" />
                            <span asp-validation-for="PickUpDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group my-3 justify-content-between d-flex">
                    <input type="submit" value="Create" class="btn btn-primary w-25" />
                    <a class="btn btn-secondary w-25" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
