@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="All-Header">
    <div class="All-Content">
        <h3 class="text-white mt-5">Login</h3>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h1 class="content text-center mt-5 fst-italic">Log In User</h1>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <button id="login-submit" type="submit" class="w-25 btn btn-primary">Log in</button>
                        <a class="w-25 btn btn-secondary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
